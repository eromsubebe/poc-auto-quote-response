# Creseada RFQ Automation - Environment Configuration

# Database (SQLite for local dev, PostgreSQL for production)
DATABASE_URL=sqlite:///./poc_data/rfq.db
# For Cloud SQL PostgreSQL:
# DATABASE_URL=postgresql://user:password@host:5432/database

# IMAP Email Polling (optional)
IMAP_HOST=
IMAP_PORT=993
IMAP_USER=
IMAP_PASSWORD=
IMAP_FOLDER=INBOX
IMAP_POLL_INTERVAL_SECONDS=60

# GCP / Vertex AI (for Gemini extraction)
GCP_PROJECT_ID=
GCP_REGION=us-central1
GEMINI_MODEL=gemini-1.5-flash
GEMINI_EXTRACTION_ENABLED=true

# SLA Configuration
SLA_TARGET_HOURS_STANDARD=24
SLA_TARGET_HOURS_URGENT=4
SLA_CHECK_INTERVAL_MINUTES=5
